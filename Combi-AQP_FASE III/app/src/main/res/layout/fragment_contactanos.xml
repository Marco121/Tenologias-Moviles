<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gonzaloenrique.combiaqp.ContactanosFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right|top">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickWebBrowser"
        android:text="Pagina en Facebook!"
        android:layout_marginTop="26dp"
        android:layout_gravity="center"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contactanos"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.00"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />

        <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:onClick="onClickMakeCalls"
        android:text="Llamanos!"
        android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envianos un Mensaje"
            android:id="@+id/button"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/button1"
            android:onClick="onClickMessage"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicanos - Maps"
            android:onClick="onClickShowMap"
            android:id="@+id/button4"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
